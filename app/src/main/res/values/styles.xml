<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="memoryBlock">
        <item name="android:background">@drawable/light_block</item>
    </style>
	<style name="bit_button">
		<item name="android:background">@color/colorPrimary</item>
	</style>
    <style name="register">
        <item name="android:onClick">invertRegister</item>
        <item name="android:text">0</item>
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_height">27dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>

