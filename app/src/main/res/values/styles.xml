<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="memoryBlock">
        <item name="android:background">@drawable/light_block</item>
    </style>
	<style name="bit_button">
		<item name="android:background">@color/colorPrimary</item>
	</style>
    <style name="register">
        <item name="android:onClick">invertRegister</item>
        <item name="android:text">0</item>
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_height">27dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="console_operations">
        <item name="android:padding">0dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginTop">120dp</item>
        <item name="android:background">@drawable/just_button</item>
        <item name="android:textAppearance">?android:attr/textAppearanceButton</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:minWidth">88dip</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

    <style name="active_button" parent="console_operations">
        <item name="android:background">@drawable/active_button</item>
    </style>
</resources>

